{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json", "tests"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "preserve",
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
